<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mathbrandino.bitcoin_market">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.BitcoinMarketApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_bitcoin"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BitcoinMarketApp">
        <activity android:name="com.mathbrandino.bitcoin_market.view.chart.ui.ChartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
